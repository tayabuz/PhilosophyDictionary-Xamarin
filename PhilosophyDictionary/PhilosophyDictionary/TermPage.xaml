<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Philosophy.TermPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label x:Name="LabelKey" Text="{Binding Key}" VerticalOptions="Start" TextColor="DeepPink"/>
                <Label x:Name="LabelValue" Text="{Binding Value}" HorizontalOptions="CenterAndExpand"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>